{
    "compilerOptions": {
      "outDir": "./dist",//es la carpeta donde se guardaran los archivos transpilados
      "rootDir": "./src", //es la carpeta donde se encuentran
      "lib": [
        "esnext"
      ],
      "target": "ESNext", //es la version de ECMAScript que se va a utilizar
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "strict": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": true
    },
    "include": [
      "src/**/*.ts" //es para que busque todos los archivos con extension .ts
    ]
  }